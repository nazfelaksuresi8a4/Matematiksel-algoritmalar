import numpy as np
import matplotlib.pyplot as plt

# θ aralığı (asimptotlarda boşluk bırakmak için maskeleme yapılacak)
theta = np.linspace(-2*np.pi, 2*np.pi, 10000)
tan_vals = np.tan(theta)

# Asimptotlara çok yaklaşan yerleri temizle
tan_vals[np.abs(tan_vals) > 10] = np.nan

plt.figure(figsize=(10,5))

plt.plot(theta, tan_vals, color="blue", linewidth=2)

# Dikey asimptot çizgileri (π/2 + kπ)
for k in range(-3, 4):
    plt.axvline((np.pi/2) + k*np.pi, color="gray", linestyle=":", linewidth=1)

# Eksenler
plt.axhline(0, color="black", linewidth=1)
plt.axvline(0, color="black", linewidth=1)

# Eksen etiketleri
plt.xticks(
    [-3*np.pi/2, -np.pi, -np.pi/2, 0, np.pi/2, np.pi, 3*np.pi/2],
    [r"$-\frac{3\pi}{2}$", r"$-\pi$", r"$-\frac{\pi}{2}$", "0", 
     r"$\frac{\pi}{2}$", r"$\pi$", r"$\frac{3\pi}{2}$"]
)

plt.title(r"$f(\theta)=\tan(\theta)$")
plt.xlabel(r"$\theta$")
plt.ylabel("f(θ)")

plt.ylim(-3.5, 3.5)
plt.grid(False)
plt.tight_layout()
plt.show()
