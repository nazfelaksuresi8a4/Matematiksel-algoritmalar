from random import randint
from time import sleep

i = 1
var =  None
index = None
user_formula = None

buffer = [[],
          []]
init = [[],
        []]


def main():
    global init
    
    init.clear()
    
    init = [[],
            []]
    
    var_prompt = int(input(f'\nsayı sırası: {len(buffer)}\n\nkaçıncı sıradaki sayıları işlemek istersin: '))
    index_prompt = int(input('\nhangi sayıya gelinince sayım dursun: '))
    
    init[0].append(var_prompt)
    init[1].append(index_prompt)
    
    return [init[0],init[1]]
    
gamma = main()    

var = gamma[1]
index = gamma[0]


buffer_variable = None

def f(x):

    scoped_x = x 

    def procces(fx):
        global i
        global buffer
        global buffer_variable
        global var
        global index

        if index == [1]:
            for j in range(len(scoped_x)):
                if [scoped_x[j]] == var: 
                    break

                else:
                    if [scoped_x[j]] == var: 
                        break
                    
                    else: 
                        if scoped_x[j] <= 0:
                            normalize = scoped_x[j] + randint(0,len(scoped_x))
                             
                            buffer[0].append(scoped_x[j] - normalize)
                       
                        else:
                            buffer[0].append(scoped_x[j])   

        if index == [2]:
            for _ in range(len(scoped_x)):
                if [scoped_x[i]] == var:    
                    break

                else:
                    buffer[1].append(scoped_x[i])


            if i >= len(scoped_x) - 1:
                i = 1

            i += 1

        if len(buffer) != 0:
            buffer_variable_x,buffer_variable_y = buffer[0].copy(), buffer[1].copy()

            return buffer_variable_x, buffer_variable_y

    return procces(fx=scoped_x)



formula = [randint(-50,50) for _ in range(100)]
chunk = 0

function = f(x=formula)

print(f'\n\ndizide {var} sayısına gelene kadarki sayılar:\n')

for k in function:
        
    print(f'\n{function[chunk]}')
    
    chunk += 1
    
    